#!/usr/bin/env ruby
# frozen_string_literal: true

#-------------------------------------------------------------
# bin2asc
# MIT License, (c) 2022 Liam Cooke
#-------------------------------------------------------------
#
# Binary string decoder. Example:
#
#   $ cat examples/binary.txt
#   01001000 01100101 ...
#   $ bin2asc < examples/binary.txt
#   Hello, world.
#
#-------------------------------------------------------------

puts$<.read.tr('^01','').scan(/.{8}/).map{|t|t.to_i(2).chr}*''
